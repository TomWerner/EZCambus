<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="165dip"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/vertLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/border" >

        <LinearLayout
            android:id="@+id/LinearLayout01"
            android:layout_height="55dip"
            android:layout_width="fill_parent" >

            <TextView
                android:id="@+id/routeNameText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:paddingBottom="5dp"
                android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
                android:paddingTop="5dp"
                android:textSize="17sp"
                android:textColor="#000000" />

            <Button
                android:id="@+id/highlightButton"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Highlight" />
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/LinearLayout01"
            android:layout_height="55dip"
            android:layout_width="fill_parent" >

            <TextView
                android:id="@+id/lblListItem1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:paddingBottom="5dp"
                android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
                android:paddingTop="5dp"
                android:textSize="17sp"
                android:textColor="#000000" />

            <Button
                android:id="@+id/button11"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/incomingTimes" />

            <Button
                android:id="@+id/button12"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/saveStop" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/itemLayout"
            android:layout_width="fill_parent"
            android:layout_height="55dip">

            <TextView
                android:id="@+id/lblListItem2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:paddingBottom="5dp"
                android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
                android:paddingTop="5dp"
                android:textSize="17sp"
                android:textColor="#000000" />

            <Button
                android:id="@+id/button21"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Incoming Times" />

            <Button
                android:id="@+id/button22"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Save Stop" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>